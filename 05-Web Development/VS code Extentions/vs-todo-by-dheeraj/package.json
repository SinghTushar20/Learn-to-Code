{
  "name": "vs-todo-by-dheeraj",
  "displayName": "VS ToDo by Dheeraj",
  "description": "just a basic todo",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:vstodo-sidebar",
    "onCommand:vs-todo-by-dheeraj.helloWorld",
    "onCommand:vs-todo-by-dheeraj.helloWorld2",
    "onCommand:vs-todo-by-dheeraj.refresh"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vstodo-sidebar-view",
          "title": "VSTodo",
          "icon": "media/checklist.svg"
        }
      ]
    },
    "views": {
      "vstodo-sidebar-view": [
        {
          "type": "webview",
          "id": "vstodo-sidebar",
          "name": "VSTodo",
          "icon": "media/checklist.svg",
          "contextualTitle": "VSTodo"
        }
      ]
    },
    "commands": [
      {
        "command": "vs-todo-by-dheeraj.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "vs-todo-by-dheeraj.helloWorld2",
        "category": "TODO:Dheeraj",
        "title": "Hello World 2.0"
      },
      {
        "command": "vs-todo-by-dheeraj.refresh",
        "category": "TODO:Dheeraj",
        "title": "Refresh Web View"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "concurrently \"rollup -c -w\" \"webpack --watch\"",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p -w . --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-typescript": "^8.2.5",
    "@tsconfig/svelte": "^2.0.1",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vscode/test-electron": "^1.6.2",
    "concurrently": "^6.2.2",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "rollup": "^2.3.4",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.43.0",
    "svelte-check": "^2.2.6",
    "svelte-preprocess": "^4.9.5",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.3",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  }
}
